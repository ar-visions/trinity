    i_struct_prop(X,Y, bool,   meta) \
    i_struct_prop(X,Y, bool,   shift) \
    i_struct_prop(X,Y, bool,   alt) \
    i_struct_prop(X,Y, string, text)
declare_struct(keyboard_state)

