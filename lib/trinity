    i_method  (X,Y, interface, none,    sync) \
    i_method  (X,Y, interface, none,    prepare) \
    i_method  (X,Y, interface, none,    output_mode, bool) \
    i_override(X,Y, method, resize)
declare_mod(canvas, image)

