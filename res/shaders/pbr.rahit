#version 460
#extension GL_EXT_ray_tracing : enable

#include <import>

hitAttributeEXT vec2 hitTexCoord; // Corrected declaration (No 'in' or 'layout(location)')

void main() {
    vec4 albedo = texture(color, hitTexCoord);
    if (albedo.a < 0.5) {
        ignoreIntersectionEXT; // Skip transparent pixels
    }
}
